package pogo

type Project struct {
    Id int `json:"id"`
    Path string `json:"path"`
}

// TODO: serialize/deserialize somewhere
var projects []Project

func Init() {
     projects = []Project{
         Project{Id: 1, Path: "~/dev/pogod"},
	 Project{Id: 2, Path: "~/dev/auth-service"},
    }
}

func Projects() []Project {
     return projects
}
